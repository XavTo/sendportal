{
    # Configuration globale de FrankenPHP / Caddy
    # Par exemple, désactiver auto HTTPS si tu utilises un proxy ou TLS externe
    auto_https off
    encode zstd br gzip
    frankenphp {
        # On peut définir worker ou autres options si nécessaire
        # worker public/index.php  (facultatif, si tu utilises mode worker)
    }
}

:80 {
    root * /app/public
    php_server {
        try_files {path} index.php
    }
    file_server
}
